---
import { Image } from 'astro:assets';

interface Props {
  href: string;
  title: string;
  subtitle: string;
  description: string;
  accent: 'burgundy' | 'rose' | 'teal';
  highlights?: string[];
  image?: ImageMetadata;
}

const { href, title, subtitle, description, accent, highlights = [], image } = Astro.props;

const accentClasses = {
  burgundy: {
    bg: 'bg-burgundy/5 hover:bg-burgundy/10',
    border: 'border-burgundy/20',
    text: 'text-burgundy',
    pill: 'bg-burgundy/10 text-burgundy',
  },
  rose: {
    bg: 'bg-rose/10 hover:bg-rose/20',
    border: 'border-rose/30',
    text: 'text-rose-dark',
    pill: 'bg-rose/20 text-rose-dark',
  },
  teal: {
    bg: 'bg-teal/5 hover:bg-teal/10',
    border: 'border-teal/20',
    text: 'text-teal-dark',
    pill: 'bg-teal/10 text-teal-dark',
  },
};

const classes = accentClasses[accent];
---

<a
  href={href}
  class:list={[
    "group block rounded-3xl border-2 overflow-hidden transition-all duration-300 hover:shadow-xl hover:-translate-y-1",
    classes.bg,
    classes.border,
  ]}
>
  {image && (
    <div class="aspect-[3/2] overflow-hidden relative">
      <Image
        src={image}
        alt={title}
        class="w-full h-full object-cover object-top group-hover:scale-105 transition-transform duration-500"
        widths={[400, 600, 800]}
        sizes="(max-width: 768px) 100vw, 50vw"
      />
      <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent"></div>
    </div>
  )}

  <div class="flex flex-col p-6 md:p-8">
    <span class:list={["text-xs font-medium uppercase tracking-wider", classes.text]}>
      {subtitle}
    </span>

    <h3 class="font-serif text-2xl md:text-3xl mt-2 mb-3 group-hover:translate-x-1 transition-transform">
      {title}
    </h3>

    <p class="text-charcoal-light leading-relaxed mb-4 text-sm">
      {description}
    </p>

    {highlights.length > 0 && (
      <div class="flex flex-wrap gap-2 mb-4">
        {highlights.map((highlight) => (
          <span class:list={["px-3 py-1 rounded-full text-xs font-medium", classes.pill]}>
            {highlight}
          </span>
        ))}
      </div>
    )}

    <div class:list={["flex items-center gap-2 font-medium mt-auto pt-2", classes.text]}>
      <span>Explore</span>
      <svg
        class="w-4 h-4 group-hover:translate-x-2 transition-transform"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
      </svg>
    </div>
  </div>
</a>
