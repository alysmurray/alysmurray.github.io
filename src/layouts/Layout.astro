---
import '../styles/global.css';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const {
  title,
  description = "Alys Murray - Screenwriter & Novelist. A writer-director of crowd-pleasing genre fare for the romantic in all of us.",
  image = "images/alys-filmmaker.jpg"
} = Astro.props;

const base = import.meta.env.BASE_URL;
const siteUrl = import.meta.env.SITE || 'https://adamdavies1915.github.io/alysWebsite';
const canonicalUrl = new URL(Astro.url.pathname, siteUrl).href;
const ogImage = new URL(`${base}${image}`, siteUrl).href;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="author" content="Alys Murray" />
    <meta name="theme-color" content="#722F37" />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalUrl} />

    <!-- Open Graph / Facebook / Instagram -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:site_name" content="Alys Murray" />
    <meta property="og:locale" content="en_US" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    <!-- Favicon & Icons -->
    <link rel="icon" type="image/svg+xml" href={`${base}favicon.svg`} />
    <link rel="apple-touch-icon" href={`${base}favicon.svg`} />

    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Person",
      "name": "Alys Murray",
      "url": siteUrl,
      "jobTitle": ["Screenwriter", "Novelist", "Director"],
      "description": "A writer-director of crowd-pleasing genre fare for the romantic in all of us.",
      "sameAs": [
        "https://www.instagram.com/writeralysmurray",
        "https://twitter.com/writeralys"
      ],
      "knowsAbout": ["Screenwriting", "Romance Novels", "Film Direction", "Hallmark Movies"],
    })} />

    <title>{title}</title>
  </head>
  <body class="min-h-screen flex flex-col">
    <Navigation />
    <main class="flex-1">
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  /* Smooth page transitions */
  main {
    animation: fadeIn 0.4s ease-out;
  }
</style>
