---
import '../styles/global.css';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const {
  title,
  description = "Alys Murray - Screenwriter & Novelist. A writer-director of crowd-pleasing genre fare for the romantic in all of us.",
  image = "images/alys-filmmaker.jpg"
} = Astro.props;

const base = import.meta.env.BASE_URL;
const siteUrl = import.meta.env.SITE || 'https://adamdavies1915.github.io/alysWebsite';
const canonicalUrl = new URL(Astro.url.pathname, siteUrl).href;
const ogImage = new URL(`${base}${image}`, siteUrl).href;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-WT3PVGJPK3"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-WT3PVGJPK3');
    </script>

    <!-- Preconnect to Google Fonts for faster loading -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500&family=Inter:wght@300;400;500;600&display=swap"
      rel="stylesheet"
      media="print"
      onload="this.media='all'"
    />
    <noscript>
      <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500&family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet" />
    </noscript>
    <meta name="description" content={description} />
    <meta name="author" content="Alys Murray" />
    <meta name="theme-color" content="#722F37" />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalUrl} />

    <!-- Open Graph / Facebook / Instagram -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:site_name" content="Alys Murray" />
    <meta property="og:locale" content="en_US" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    <!-- Favicon & Icons -->
    <link rel="icon" type="image/svg+xml" href={`${base}favicon.svg`} />
    <link rel="apple-touch-icon" href={`${base}favicon.svg`} />

    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Person",
      "name": "Alys Murray",
      "url": siteUrl,
      "jobTitle": ["Screenwriter", "Novelist", "Director"],
      "description": "A writer-director of crowd-pleasing genre fare for the romantic in all of us.",
      "sameAs": [
        "https://www.instagram.com/writeralysmurray",
        "https://twitter.com/writeralys"
      ],
      "knowsAbout": ["Screenwriting", "Romance Novels", "Film Direction", "Hallmark Movies"],
    })} />

    <title>{title}</title>
  </head>
  <body class="min-h-screen flex flex-col">
    <Navigation />
    <main class="flex-1">
      <slot />
    </main>
    <Footer />

    <!-- Custom GA4 Event Tracking -->
    <script is:inline>
      // Scroll depth tracking
      (function() {
        const thresholds = [25, 50, 75, 100];
        const tracked = new Set();

        function getScrollPercent() {
          const h = document.documentElement;
          const b = document.body;
          const st = 'scrollTop';
          const sh = 'scrollHeight';
          return Math.round((h[st] || b[st]) / ((h[sh] || b[sh]) - h.clientHeight) * 100);
        }

        window.addEventListener('scroll', function() {
          const percent = getScrollPercent();
          thresholds.forEach(function(threshold) {
            if (percent >= threshold && !tracked.has(threshold)) {
              tracked.add(threshold);
              if (typeof gtag === 'function') {
                gtag('event', 'scroll_depth', {
                  percent_scrolled: threshold,
                  page_path: window.location.pathname
                });
              }
            }
          });
        }, { passive: true });
      })();

      // Pre-order and retailer link tracking
      document.addEventListener('click', function(e) {
        const link = e.target.closest('a');
        if (!link) return;

        const href = link.href || '';
        const text = link.textContent || '';

        // Track pre-order page visits
        if (href.includes('a-little-buzzed') && !href.includes('http')) {
          if (typeof gtag === 'function') {
            gtag('event', 'preorder_click', {
              link_text: text.trim(),
              link_url: href
            });
          }
        }

        // Track retailer clicks
        const retailers = {
          'gardendistrictbookshop.com': 'Garden District Books',
          'barnesandnoble.com': 'Barnes & Noble',
          'amazon.com': 'Amazon',
          'books.apple.com': 'Apple Books',
          'bookshop.org': 'Bookshop.org'
        };

        for (const [domain, name] of Object.entries(retailers)) {
          if (href.includes(domain)) {
            if (typeof gtag === 'function') {
              gtag('event', 'retailer_click', {
                retailer: name,
                link_url: href
              });
            }
            break;
          }
        }
      });
    </script>
  </body>
</html>

<style is:global>
  /* Smooth page transitions */
  main {
    animation: fadeIn 0.4s ease-out;
  }
</style>
